{
  "schemaVersion": 1,
  "id": "hydra",
  "version": "${version}",

  "name": "Hydra",
  "description": "A Twitch Integrations mod to bring your chat into Minecraft and more! ",
  "authors": [
    "Ender",
    "WafflesAreBetter"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/hydra",
    "issues": "https://github.com/theendercore/Hydra/issues"
  },

  "license": "CC BY-NC-SA 4.0",
  "icon": "assets/hydra/hydra.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.theendercore.hydra.Hydrakt::onInitialize"
      }
    ]
  },
  "mixins": [
    "hydra.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.8",
    "fabric": "*",
    "fabric-language-kotlin": ">=1.8.5+kotlin.1.7.20",
    "minecraft": ">=1.19.1",
    "java": ">=17"
  },
  "recommends": {
    "modmenu": ">=4.0.5",
    "twitch4j": ">=1.12.0"
  },
  "suggests": {
    "sodium": "*"
  },
  "custom": {
    "warning": "If you are reading this you have been hacked B)"
  }
}
